#include <stdio.h>

// Определение типов одежды
typedef enum {
    Outerwear,
    BusinessWear,
    CasualWear,
    EveningWear,
    Sportswear,
    Swimwear,
    Underwear,
    Shoes,
    Accessories,
    SpecialWear
} ClothingType;

// Определение пола для одежды
typedef enum {
    Male,
    Female
} Gender;

// Структура одежды
typedef struct {
    ClothingType type;
    Gender gender;
    char description[100]; // Описание одежды
} ClothingItem;

// Функция для инициализации одежды
void initClothingItem(ClothingItem *item, ClothingType type, Gender gender, const char *description) {
    item->type = type;
    item->gender = gender;
    snprintf(item->description, sizeof(item->description), "%s", description);
}

// Функция для вывода информации об одежде
void printClothingItem(const ClothingItem *item) {
    const char *types[] = {"Верхняя одежда", "Деловая одежда", "Повседневная одежда", "Вечерняя одежда",
                           "Спортивная одежда", "Пляжная одежда", "Нижнее белье", "Обувь", "Аксессуары", "Специальная одежда"};
    const char *genders[] = {"Мужская", "Женская"};
    
    printf("%s %s: %s\n", genders[item->gender], types[item->type], item->description);
}

int main() {
    ClothingItem items[] = {
        {Outerwear, Male, "Пальто, куртка, парка, бомбер"},
        {Outerwear, Female, "Пальто, пуховик, шуба, тренч"},
        // Добавьте другие элементы по аналогии
    };

    const int itemCount = sizeof(items) / sizeof(items[0]);
    for (int i = 0; i < itemCount; ++i) {
        printClothingItem(&items[i]);
    }

    return 0;
}
